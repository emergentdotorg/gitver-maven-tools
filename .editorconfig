# EditorConfig is awesome: https://editorconfig.org
root = true

# Defaults
[*.{groovy,xml}]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

# Batch Files
[*.{cmd,bat}]
end_of_line = crlf

# Markdown Files
[*.{md,mdx}]
indent_size = 4
trim_trailing_whitespace = false